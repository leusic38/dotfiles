menu-0-1-exec = poweroff
menu-0-2 = Logout
menu-0-2-foreground = #FFCC66
menu-0-2-exec = bspc quit 

[module/previous]
type = custom/script
#interval = 86400
format = "%{T3}<label>"
format-padding = 1
; Previous song icon
exec = echo "‚èÆÔ∏è"
; Check if spotify is running before displaying the icon
exec-if = "pgrep spotify"
format-underline = #1db954
line-size = 1
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"

[module/next]
type = custom/script
#interval = 86400
format = "%{T3}<label>"
format-padding = 1
; Next song icon
exec = echo "‚è≠Ô∏è"
; Check if spotify is running before displaying the icon
exec-if = "pgrep spotify"
format-underline = #1db954
line-size = 1
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"

[module/playpause]
type = custom/ipc
; Default
hook-0 = echo "‚èØÔ∏è"
; Playing
hook-1 = echo "‚è∏Ô∏è"
; Paused
hook-2 = echo "‚ñ∂Ô∏è"
initial = 1
format-underline = #1db954
line-size = 1
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"

[module/spotify]
type = custom/script
interval = 1
format-prefix = "Ó™î "
;format-prefix = "ÓÉ¨ÔÜºÓ¶û "
format = <label>
exec = python3 /hdd/dotfiles/spotifyblock/spotify_status.py -f '{artist}: {song}'
;format-underline = #1db954

[module/spotifyi3]
type = custom/ipc
hook-0 = echo ""
hook-1 = python3 /hdd/dotfiles/spotifyblock/spotify_status.py
initial = 1
format-padding = 4
format-underline = #1db954
line-size = 1
; [i3wm only] - Uncomment the below line to focus on Spotify when clicking on the song name (credits to https://github.com/Esya)
click-left = i3-msg '[class="Spotify"] focus'
[settings]
screenchange-reload = true

