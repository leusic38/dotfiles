case $BLOCK_BUTTON in
1) notify-send -t 3000 "$(date '+%A')" "ðŸ“… $(date '+%B %dXX' | sed -r -e 's/(1[123])XX/\1th/;s/1XX/1st/;s/2XX/2nd/;s/3XX/3rd/;s/XX/th/;s/ 0/ /')" & ;;
