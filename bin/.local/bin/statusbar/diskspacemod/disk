#!/bin/sh

# Status bar module for disk space
# $1 should be drive mountpoint
# $2 is optional icon, otherwise mountpoint will displayed

for location in '/home' '/'; do
	case "$location" in
	"/home"*) icon="ğŸ " ;;
	"/"*) icon="ğŸ’¾" ;;
	*) icon="ğŸ–¥" ;;
	esac

	printf "%s:%s" "$icon" "$(df -h "$location" | awk ' /[0-9]/ {print $3 "/" $2}') "
done
